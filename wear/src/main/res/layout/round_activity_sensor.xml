<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atbsg.stroke.aroundthebodystrokegame.games.SensorActivity"
    tools:deviceIds="wear_round"
    android:background="#313c9a">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/custom_progressbar"
        android:id="@+id/progressBar"
        android:max="2000"
        android:progress="0"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:progressDrawable="@drawable/custom_progressbarhorizontal"
        android:id="@+id/progressBar2"
        android:max="500"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:progress="0"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" android:text="" android:layout_alignParentTop="true"
        android:paddingTop="25dp"
        android:fontFamily="sans-serif-condensed-light"
        android:lineSpacingExtra="-4sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:textSize="16sp"
        />
</RelativeLayout>
